@model crud.Models.UpdateEmployeeViewModel
@{
}


<h1>Edit Employee</h1>
<form method="post" action="View" class="mt-5">
    <div class="form-group">
        <div class="mb-3">
            <label for="">Id</label>
            <input type="text" class="form-control" placeholder="Id" asp-for="Id" readonly>
        </div>
        <div class="mb-3">
            <label for="">Full Name</label>
            <input type="text" class="form-control" placeholder="Enter Name" asp-for="Name">
        </div>
        <div class="mb-3">
            <label for="">Email address</label>
            <input type="email" class="form-control" placeholder="Enter Email" asp-for="Email">
        </div>
        <div class="mb-3">
            <label for="">Salary</label>
            <input type="number" class="form-control" placeholder="Enter Salary" asp-for="Salary">
        </div>
        <div class="mb-3">
            <label for="">Department</label>
            <input type="text" class="form-control" placeholder="Enter Department" asp-for="Department">
        </div>
    </div>

    <button type="submit" class="btn btn-info">Update</button>

    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Employee">Delete</button>
</form>